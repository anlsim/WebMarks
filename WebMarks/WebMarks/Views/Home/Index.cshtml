@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Welcome to CS WebMarks</h1>

    <div id="myCarousel" class="carousel slide vertical" data-ride="carousel" style="overflow: hidden">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/Slide2.png" alt="Create board" style="width: 100%;">
                <div class="carousel-caption d-none d-md-block bg-cinereous mb-4">
                    <h4>Start by creating a Board</h4>

                </div>
            </div>

            <div class="carousel-item">
                <img src="~/images/Slide3.png" alt="Chicago" style="width: 100%;">
                <div class="carousel-caption d-none d-md-block bg-cinereous mb-4">
                    <h4>You can organize your boards as you like</h4>

                </div>
            </div>

            <div class="carousel-item">
                <img src="~/images/Slide4.png" alt="New York" style="width: 100%;">
                <div class="carousel-caption d-none d-md-block bg-cinereous mb-4">
                    <h3>Start creating webmarks. Just paste your website url, we'll do the rest</h3>

                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/Slide5.png" alt="New York" style="width: 100%;">
                <div class="carousel-caption d-none d-md-block bg-cinereous mb-4">
                    <h3>Have as many webmarks as you like</h3>

                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


</div>
